    <TableLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/enter_intro_ibtn"
                android:text="서비스소개"
                android:src="@drawable/ic_description_black_36dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/enter_survey_ibtn"
                android:text="설문작성"
                android:src="@drawable/ic_mode_edit_black_36dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/enter_sample_ibtn"
                android:text="시료측정"
                android:src="@drawable/ic_opacity_black_36dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
        </TableRow>

        <TableRow
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/enter_myinfo_ibtn"
                android:text="내정보"
                android:src="@drawable/ic_question_answer_black_36dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
            <ImageButton
                android:id="@+id/enter_history_ibtn"
                android:text="이력관리"
                android:src="@drawable/ic_date_range_black_36dp"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
            <ImageButton
