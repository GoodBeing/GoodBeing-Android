            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/one_N20"
            >
            <RadioButton
                android:id="@+id/one_N20_1"
                android:text="@string/survey_1_20_a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/one_N20_2"
                android:text="@string/survey_1_20_a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:id="@+id/one_N20_3"
                android:text="@string/survey_1_20_a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
