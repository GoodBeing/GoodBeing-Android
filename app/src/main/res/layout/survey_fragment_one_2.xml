<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="30dp"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="10dp">

        <TextView
            android:text="@string/survey_1_6_q"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/one_N6"
            >
            <RadioButton
                android:id="@+id/one_N6_1"
                android:text="아니요"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/one_N6_2"
                    android:text="예"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <EditText
                    android:id="@+id/one_N6_familynumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:hint="있다면 자신을 제외한 가족수를 입력해주세요"
                    android:textSize="15dp"

                    />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        >
        <TextView
            android:text="@string/survey_1_7_q"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/one_N7"
           >
            <RadioButton
                android:text=" 거의없다"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/one_N7_1"/>

            <RadioButton
                android:text=" 주 1-2시간 정도 노출된다"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/one_N7_2"/>
            <RadioButton
                android:text=" 날마다 1-2시간 노출된다"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/one_N7_3"/>
            <RadioButton
                android:text=" 날마다 3시간 이상 노출된다"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/one_N7_4"/>
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:text="@string/survey_1_8_q"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/one_N8"
            >
            <RadioButton
                android:id="@+id/one_N8_1"
                android:text="아니요"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />



                <RadioButton
                    android:id="@+id/one_N8_2"
                    android:text="예(고지혈, 당뇨, 고혈압, 불임/난임, 생리불순,기타)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </RadioGroup>
    </LinearLayout>
</LinearLayout>